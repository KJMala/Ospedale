@model Ospedale.Models.User

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Ruolo)
<center>
    <div class="card CardGenerica w-50 mt-5">
        <div class="form-horizontal">
            @if(ViewBag.Errore != null )
                {
                    <div class="alert alert-danger mt-3 w-50">
                        @ViewBag.Errore
                    </div>
                }
            <h4 class="mt-3">Effettua l'accesso</h4>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label my-2"})
                <div class="">
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @placeholder = "username" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label my-2" })
                <div class="">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type="password", @placeholder = "password" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Accedi" class="btn bottone mt-3 my-3" />
                </div>
            </div>
        </div>
    </div>
</center>
    
}
