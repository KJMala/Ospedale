@model Ospedale.Models.Farmaco

@{
    ViewBag.Title = "ModificaFarmaco";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <center>
        <div class="card CardGenerica w-50 mt-5">
            <h3 class="mt-3 my-3">Modifica Farmaco</h3>
            <div class="form-horizontal">
                @if (ViewBag.Errore != null)
                {
                    <div class="alert alert-danger mt-3 w-50">
                        @ViewBag.Errore
                    </div>
                }
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.IdFarmaco)

                <div class="form-group">
                    @Html.LabelFor(model => model.NomeFarmaco, htmlAttributes: new { @class = "control-label mt-1 my-1" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NomeFarmaco, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NomeFarmaco, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Quantià, htmlAttributes: new { @class = "control-label mt-1 my-1 " })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Quantià, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Quantià, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IdReparto, "Nome Reparto", htmlAttributes: new { @class = "control-label mt-1 my-1" })
                    <div class="col-md-10">
                        @Html.DropDownList("IdReparto", new SelectList(ViewBag.ListaReparto, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IdReparto, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DataInvioFarmaco, htmlAttributes: new { @class = "control-label mt-1 my-1" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DataInvioFarmaco, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                        @Html.ValidationMessageFor(model => model.DataInvioFarmaco, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Modifica Farmaco" class="btn bottone mt-3 my-3" />
                    </div>
                </div>
            </div>
        </div>
    </center>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
