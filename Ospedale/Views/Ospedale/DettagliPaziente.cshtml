@model Ospedale.Models.Paziente

@{
    ViewBag.Title = "DettagliPaziente";
}
<center>
    <div class="card CardGenerica w-50 mt-5">
        <h3 class="mt-3 my-3">Dettagli Paziente</h3>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Cognome)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Cognome)
            </dd>

            <dt>
                Codice Fiscale
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CodiceFiscale)
            </dd>

            <dt>
                Data di Nascita
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DataNascita)
            </dd>

        </dl>
    </div>
</center>

    <h2 class="mt-3">Visite associate al paziente @Model.Nome @Model.Cognome</h2>

    <table class="table table-striped table-info mt-4">
        <tr>
            <th>
                Nome Visita
            </th>
            <th>
                Data Visita
            </th>
            <th>
                Medico Operante
            </th>
            <th>
                Reparto
            </th>
        </tr>
        @foreach (var item in Model.Visita.Reverse())
        {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeVisita)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataVisita)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Medico.Cognome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Reparto.NomeReparto)
                    </td>
                </tr>
        }
    </table>
