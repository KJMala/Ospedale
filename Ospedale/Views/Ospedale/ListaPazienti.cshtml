@model IEnumerable<Ospedale.Models.Paziente>

@{
    ViewBag.Title = "ListaPazienti";
}

@if (TempData["Errore"] != null)
{
    <div class="alert alert-danger mt-3 w-50">
        @TempData["Errore"]
    </div>
}

<h2 class="mt-3 justify-content-center">Lista dei Pazienti</h2>

<p>
    @Html.ActionLink("Crea Nuovo Paziente", "CreaPaziente", new { area = "" }, new { @class = "btn bottone" })
</p>
<table class="table table-striped table-info">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cognome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodiceFiscale)
        </th>
        <th>
            Data di Nascita
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cognome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodiceFiscale)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascita)
            </td>
            <td>
                <a class="btn btn-warning" href="/Ospedale/ModificaPaziente/@item.IdPaziente"><i class="fa-solid fa-edit"></i></a>
                <a class="btn btn-primary" href="/Ospedale/DettagliPaziente/@item.IdPaziente"><i class="fa-solid fa-chalkboard-user"></i></a>
                <a class="btn btn-danger" href="/Ospedale/CancellaPaziente/@item.IdPaziente"><i class="fa-solid fa-trash"></i></a>
            </td>
        </tr>
    }

</table>
