@model IEnumerable<Ospedale.Models.Medico>

@{
    ViewBag.Title = "ListaMedici";
}
@if (TempData["Errore"] != null)
{
    <div class="alert alert-danger mt-3 w-50">
        @TempData["Errore"]
    </div>
}

<h2 class="mt-3 justify-content-center">Lista dei Medici</h2>

<p>
    @Html.ActionLink("Crea Nuovo Medico", "CreaMedico", new { area = "" }, new { @class = "btn bottone" })
</p>
<table class="table table-striped table-info">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cognome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reparto.NomeReparto)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cognome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reparto.NomeReparto)
            </td>
            <td>
                <a class="btn btn-warning" href="/Ospedale/ModificaMedico/@item.IdMedico"><i class="fa-solid fa-edit"></i></a>
                <a class="btn btn-danger" href="/Ospedale/CancellaMedico/@item.IdMedico"><i class="fa-solid fa-trash"></i></a>
            </td>

        </tr>
    }

</table>
