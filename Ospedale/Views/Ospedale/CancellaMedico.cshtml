@model Ospedale.Models.Medico

@{
    ViewBag.Title = "CancellaMedico";
}
<center>
    <div class="card CardGenerica w-50 mt-5">
        <h3 class="mt-3 my-3">Eliminare il Medico: </h3>
        <dl class="form-horizontal">
            @if (ViewBag.Errore != null)
            {
                <div class="alert alert-danger mt-3 w-50">
                    @ViewBag.Errore
                </div>
            }
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Cognome)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Cognome)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Reparto.NomeReparto)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Reparto.NomeReparto)
            </dd>

        </dl>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <p class="alert alert-danger w-50">Sei sicuro di voler eliminare il medico? la eliminazione sarà definitiva</p>
            <input type="submit" value="Cancella Medico" class="btn btn-danger mb-3" />
        }
    </div>

</center>
