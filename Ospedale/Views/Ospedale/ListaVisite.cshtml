@model IEnumerable<Ospedale.Models.Visita>

@{
    ViewBag.Title = "ListaVisite";
}

<h2 class="mt-3 justify-content-center">Lista delle Visite</h2>

<p>
    @Html.ActionLink("Crea Nuova Visita", "CreaVisita", new { area = "" }, new { @class = "btn bottone" })
</p>

<table class="table table-striped table-info">
    <tr>

        <th>
            Medico
        </th>
        <th>
            Paziente
        </th>
        <th>
            Reparto
        </th>
        <th>
            Data Visita
        </th>
        <th>
            Stato Paziente
        </th>
        <th>
            Pressione Min
        </th>
        <th>
            Pressione Max
        </th>
        <th>
            T°
        </th>
        <th>
            Frequenza Cardiaca
        </th>
        <th>
            Nome Visita
        </th>
        <th>
            Farmaco
        </th>
        <th>
            Posologia
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Medico.Cognome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paziente.CodiceFiscale)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reparto.NomeReparto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataVisita)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatoPaziente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PressioneMinima)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PressioneMassima)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Temperatura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FrequenzaCardiaca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeVisita)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Farmaco.NomeFarmaco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Posologia) mg/ml
            </td>
            <td>
                <a class="btn btn-warning" href="/Ospedale/ModificaVisita/@item.IdVisita"><i class="fa-solid fa-edit"></i></a>   
            </td>
            <td>
                <a class="btn btn-danger" href="/Ospedale/CancellaVisita/@item.IdVisita"><i class="fa-solid fa-trash"></i></a>
            </td>
        </tr>
    }

</table>
